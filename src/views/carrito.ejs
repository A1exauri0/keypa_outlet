<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <link rel="shortcut icon" href="/images/logo.png" />
    <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Carrito de Compras</h1>

        <% if (carrito.length > 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% carrito.forEach(item => { %>
                            <tr>
                                <td><%= item.nombre %></td>
                                <td>$<%= item.precio %></td>
                                <td><%= item.cantidad %></td>
                                <td>$<%= item.precio * item.cantidad %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <h4>Total: $<%= carrito.reduce((total, item) => total + item.precio * item.cantidad, 0) %></h4>
                </div>

                <!-- Botón de hacer pedido -->
                <form method="POST" action="/hacer-pedido" class="mt-4">
                    <button type="submit" class="btn btn-success w-100">Hacer Pedido</button>
                </form>
            </div>
        <% } else { %>
            <p class="text-center">Tu carrito está vacío.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>
