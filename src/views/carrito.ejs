<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <link rel="shortcut icon" href="/images/logo.png" />
    <link rel="stylesheet" href="https://bootswatch.com/5/vapor/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Carrito de Compras</h1>

        <div class="card" style="max-width: 600px; margin: 0 auto;">
            <div class="card-body">
                <% if (carrito.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% carrito.forEach(item => { %>
                                    <tr>
                                        <td><%= item.nombre %></td>
                                        <td>$<%= item.precio %></td>
                                        <td><%= item.cantidad %></td>
                                        <td>$<%= item.precio * item.cantidad %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end">
                            <h5>Total: $<%= carrito.reduce((total, item) => total + item.precio * item.cantidad, 0) %></h5>
                        </div>
                    </div>

                    <!-- Botones dentro de la card -->
                    <div class="d-flex justify-content-between mt-3">
                        <!-- Botón de regresar -->
                        <a href="/catalogo" class="btn btn-primary btn-sm">Regresar al Catálogo</a>

                        <!-- Botón de hacer pedido -->
                        <form method="POST" action="/hacer-pedido">
                            <button type="submit" class="btn btn-success btn-sm">Hacer Pedido</button>
                        </form>
                    </div>
                <% } else { %>
                    <p class="text-center">Tu carrito está vacío.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>
